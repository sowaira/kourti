      <% end %>]
      ,
    }
  </script>


  <div class="wrapper">
    <!-- <div class="content"> -->
    <%= render "layouts/header" %>
    
    <%= yield %>

    <%= render "layouts/footer" %>

    <!-- </div> -->
  </div>


  <script type="text/javascript" src="<%= assets_path('js/lib.js') %>"></script>
  <script type="text/javascript" src="<%= assets_path('js/templates.js') %>"></script>
  <script type="text/javascript" src="<%= assets_path('js/core.js') %>"></script>
    <script type="text/javascript">
      new SharedApp.Views.Shared();
      SharedApp.main.init();
  </script>

	<%= yield :js %>
